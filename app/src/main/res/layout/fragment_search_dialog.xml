<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.imoandroid.imoandroidapp.SearchDialogFragment">

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add Term"
            android:gravity="center"
            android:background="#000"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:padding="12dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <EditText
                android:id="@+id/etSearch"
                android:maxLines="1"
                android:inputType="text"
                android:hint="Search"
                android:layout_margin="3dip"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/bDoSearch"
                android:paddingLeft="40dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_alignLeft="@+id/etSearch"
                android:src="@drawable/mag"
                android:scaleType="fitXY"/>
            <Button
                android:id="@+id/bDoSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Search"
                android:textSize="17sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <Button
                android:layout_width="30dp"
                android:id="@+id/clearSearch"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="X"
                android:gravity="center"
                android:textColor="#111"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@+id/bDoSearch"/>
        </RelativeLayout>

        <ListView
            android:id="@+id/lvResults"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            </ListView>

    </LinearLayout>

    <!-- divider -->
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#DADADA"
        />

    <!-- Frames to display on right -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/frame">

        <!-- Chart fragment -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#eee"
            >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="#000"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Chart"
                    android:textSize="25dip"
                    android:padding="12dip"
                    android:gravity="center"
                    android:background="#000"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:background="#000000"
                    android:padding="10dp"/>
                </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Selected Terms:"
                android:textColor="#000"
                android:layout_margin="5dip"
                android:textSize="17sp"
                android:paddingLeft="10dip"/>
            <ListView
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:id="@+id/lvChart"
                android:layout_margin="10dip"></ListView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#444"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:text="Save Chart"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"/>
            </LinearLayout>
        </FrameLayout>
</LinearLayout>